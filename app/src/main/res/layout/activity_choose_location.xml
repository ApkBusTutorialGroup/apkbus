<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:orientation="vertical">

    <TextView
        style="@style/font_25sp_redA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:alpha="0.8"
        android:padding="@dimen/dp_10"
        android:text="@string/please_choose_area" />

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="210dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:alpha="0.8"
        android:background="@color/grayE"
        android:orientation="horizontal">

        <com.apkbus.weather.wheel_widget.WheelView
            android:id="@+id/provinceWheelView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.apkbus.weather.wheel_widget.WheelView
            android:id="@+id/cityWheelView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.apkbus.weather.wheel_widget.WheelView
            android:id="@+id/districtWheelView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        style="@style/font_20sp_redF"
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:paddingLeft="35dp"
        android:paddingRight="40dp"
        android:alpha="0.6"
        android:background="@drawable/button_shape"
        android:text="@string/sure" />

</LinearLayout>